<?xml version="1.0"?>
<package>
  <name>fkie_iop_digital_resource_discovery</name>
  <version>1.1.0</version>
  <description>The full functional implementation of IOP digital resource discovery service.
    This service can be included into other components. </description>

  <maintainer email="alexander.tiderko@fkie.fraunhofer.de">Alexander Tiderko</maintainer>
  <license>GPLv2</license>
  <url type="website">https://github.com/fkie/iop_platform</url>

  <buildtool_depend>catkin</buildtool_depend>
  <build_depend>fkie_iop_events</build_depend>
  <build_depend>fkie_iop_msgs</build_depend>
  <build_depend>roscpp</build_depend>
  <run_depend>roscpp</run_depend>
  <run_depend>fkie_iop_component</run_depend>
  <run_depend>fkie_iop_events</run_depend>
  <run_depend>fkie_iop_msgs</run_depend>

  <export>
    <fkie_iop_component plugin="${prefix}/plugin_iop.xml" />
  </export>
</package>